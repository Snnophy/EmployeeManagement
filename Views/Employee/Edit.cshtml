@model EmployeeManagement.Models.Employee

<!DOCTYPE html>
<html>
<head>
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h1>Edit Employee</h1>
        
        <!-- Edit Employee Form -->
        <form id="employeeForm" method="post">
            <input type="hidden" id="EmployeeId" name="Id" value="@Model.Id" />
            <div class="mb-3">
                <label for="Name" class="form-label">Name</label>
                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
            </div>
            <div class="mb-3">
                <label for="Position" class="form-label">Position</label>
                <input type="text" class="form-control" id="Position" name="Position" value="@Model.Position" required />
            </div>
            <div class="mb-3">
                <label for="Office" class="form-label">Office</label>
                <input type="text" class="form-control" id="Office" name="Office" value="@Model.Office" required />
            </div>
            <div class="mb-3">
                <label for="Salary" class="form-label">Salary</label>
                <input type="number" class="form-control" id="Salary" name="Salary" value="@Model.Salary" step="0.01" required />
            </div>
            <button type="submit" class="btn btn-primary" id="submitBtn">Update Employee</button>
        </form>
    </div>
</body>
</html>
